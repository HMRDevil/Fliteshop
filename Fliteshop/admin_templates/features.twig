{% extends '@admin/index.twig' %}

{% block title %}Свойства{% endblock title%}

{% block page_menu_items %}
    <li class="page-menu-item"><a href="{{ path('admin_product') }}">Товары</a></li>
    <li class="page-menu-item"><a href="{{ path('admin_category') }}">Категории</a></li>
    <li class="page-menu-item"><a href="{{ path('admin_brand') }}">Бренды</a></li>
    <li class="page-menu-item active"><a href="{{ path('admin_feature') }}">Свойства</a></li>
{% endblock page_menu_items %}

{% block page_header %}
    <a class="page-header-item" href="{{ path('admin_feature_add') }}">Добавить свойство</a>
{% endblock page_header %}

{% block page_content %}
    
    <form class="page-content" method="post" action="{{ path('admin_feature_action') }}" onsubmit="return confirm('Подтвердите действие');">
        <input type="hidden" name="_token" value="{{ csrf_token('action_checked') }}">
        {% for feature in features %}
            <div class="product-content">
                <input type="checkbox" name="features[]" value="{{ feature.id }}">
                <a href="{{ path('admin_feature_edit', {id: feature.id}) }}">{{ feature.name }}</a>
                <div class="adm_functions">
                    <a class="adm_delete" href="{{ path('admin_feature_delete', {id: feature.id}) }}">Удалить</a>
{#                    <a href="{{ path('feature', {url: feature.url}) }}" target="_blank">Предпросмотр (новое окно)</a>  #}
                </div>
            </div>
            <br>
        {% endfor %}
    </form>
    
{% endblock page_content %}